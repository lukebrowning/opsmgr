containers:
{% for container in groups['opsmgr_containers'] %}
  - name:     {{ hostvars[container].lxc.name }}
    role:     {{ hostvars[container].lxc.role }}
    host:     {{ hostvars[container].host }}
    hostname: {{ hostvars[container].name }}
    address:  {{ hostvars[container].address }}
    mount:    {{ hostvars[container].lxc.mount }}
    ports:    {{ hostvars[container].lxc.ports }}
{% endfor %}


