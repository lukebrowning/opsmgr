lxcnets:
{% for hst in groups['opsmgr_hosts'] %}
{% set hstloop = loop %}
{% for lxc in containers %}
{% set lxcloop = loop %}
{% for net in container_networks %}
{% set netloop = loop %}
  - name: {{ hst }}-{{ lxc.name }}-{{ net.name }}
    host: {{ hst }}
    lxc: {{ lxc.name }}
    net: {{ net.name }}
    type: {{ net.type }}
    interface: {{ net.interface }}
    netmask: {{ net.netmask }}
    address: {{ address_pool[netloop.index0 + lxcloop.index0 * netloop.length + hstloop.index0 * netloop.length * lxcloop.length] }}
{%endfor %}
{%endfor %}
{%endfor %}

