frontend elasticsearch-front
bind *:9200
    option httplog
    option forwardfor except 127.0.0.0/8
    option http-server-close
    mode http
    default_backend elasticsearch-back

backend elasticsearch-back
    mode http
    balance leastconn
    option forwardfor
    option httpchk
    option httplog
    server {{ groups['elasticsearch'][0] }} {{ hostvars[groups['elasticsearch'][0]]['container_address'] }}:9200 check port 9200 inter 12000 rise 2 fall 2
